<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="image" pattern="/">
        <default key="_controller">SatoripopCropImagesBundle:Image:index</default>
    </route>

    <route id="image_show" pattern="/{id}/show">
        <default key="_controller">SatoripopCropImagesBundle:Image:show</default>
    </route>

    <route id="image_new" pattern="/new">
        <default key="_controller">SatoripopCropImagesBundle:Image:new</default>
    </route>

    <route id="image_create" pattern="/create">
        <default key="_controller">SatoripopCropImagesBundle:Image:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="image_edit" pattern="/{id}/edit">
        <default key="_controller">SatoripopCropImagesBundle:Image:edit</default>
    </route>

    <route id="image_update" pattern="/{id}/update">
        <default key="_controller">SatoripopCropImagesBundle:Image:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="image_delete" pattern="/{id}/delete">
        <default key="_controller">SatoripopCropImagesBundle:Image:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
