{% extends 'SatoripopImagesBundle:Layout:layout.html.twig' %}

{% block body -%}
    {% form_theme delete_form 'SatoripopImagesBundle:Form:icon_button.html.twig' %}
    <h1>{{ 'title.show'|trans({},'SatoripopImagesBundle') }} <span class="badge pull-right">{{ form(delete_form) }}</span></h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <td rowspan="7" style="width: 260px;">
                <a data-toggle="lightbox" data-gallery="sp_images" data-title="{{ entity.path }} / {{ entity.width }}x{{ entity.height }} / {{ entity.fileSize|file_size }}" href="{{ entity|full_image }}">
                    <img src="{{ entity|thumb('250x250') }}" class="img-thumbnail"/>
                </a>
            </td>
            <th>{{ 'entity.filename'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.mime_type'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.mimeType }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.upload_date'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.uploadedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.update_date'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.filesize'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.fileSize|file_size }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.size'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.width }}x{{ entity.height }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.xiff'|trans({},'SatoripopImagesBundle') }}</th>
            <td>{{ entity.xiff }}</td>
        </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-primary btn-xs" href="{{ path('image') }}">
            <span class="glyphicon glyphicon-chevron-left" title="{{ 'action.back'|trans({},'SatoripopImagesBundle') }}"></span> {{ 'title.back'|trans({},'SatoripopImagesBundle') }}
        </a>
        <a class="btn btn-primary btn-xs" href="{{ path('image_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil" title="{{ 'action.edit'|trans({},'SatoripopImagesBundle') }}"></span> {{ 'title.edit'|trans({},'SatoripopImagesBundle') }}
        </a>
    </div>
    <script>
        $(document).delegate('*[data-toggle="lightbox"]', 'click', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });
    </script>
{% endblock %}
